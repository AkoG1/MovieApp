<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.movieapp.ui.movies.MoviesFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_movies" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.movieapp.ui.tickets.TicketsFragment"
        android:label="@string/title_bookmarks"
        tools:layout="@layout/fragment_tickets" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.movieapp.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />
</navigation>